{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BSI Baustein Parts Stub Schema",
  "description": "A schema to validate the extracted 'usage' and 'risk' parts for a single BSI Baustein.",
  "type": "object",
  "required": [
    "id",
    "parts"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "The unique identifier for the Baustein, e.g., 'APP.1.1'.",
      "pattern": "^\\S+$"
    },
    "parts": {
      "type": "array",
      "description": "An array containing the usage and risk parts.",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "prose"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["usage", "risk", "introduction", "objective"]
          },
          "title": {
            "type": "string"
          },
          "prose": {
            "type": "string"
          }
        }
      }
    }
  }
}