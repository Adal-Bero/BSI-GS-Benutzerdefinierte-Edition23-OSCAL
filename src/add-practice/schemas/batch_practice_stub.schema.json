{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/oscal/batch-practice-stub.schema.json",
    "title": "OSCAL Batch Practice Part Stub Schema",
    "description": "A schema for validating an array of 'practice' parts generated by the AI model.",
    "type": "array",
    "items": {
      "type": "object",
      "required": [
        "name",
        "class",
        "prose"
      ],
      "properties": {
        "name": {
          "description": "The name of the part, which must be 'practice'.",
          "type": "string",
          "const": "practice"
        },
        "class": {
          "description": "The assigned practice category.",
          "type": "string",
          "enum": [
            "GOV", "ISGA", "DOCS", "RISK", "REAL", "PERF", "LAW", "ARCH", "SENS", "BER", "DET", "SYS", "APP"
          ]
        },
        "prose": {
          "description": "Justification for why the control belongs to the chosen practice.",
          "type": "string",
          "minLength": 50
        }
      },
      "additionalProperties": false
    }
  }