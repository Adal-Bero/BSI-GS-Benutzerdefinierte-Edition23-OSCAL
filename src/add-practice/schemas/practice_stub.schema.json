{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/oscal/practice-stub.schema.json",
    "title": "OSCAL Practice Part Stub Schema (Classification)",
    "description": "A schema for validating the 'practice' part generated by the AI model. This part classifies the control into a practice category.",
    "type": "object",
    "required": [
      "name",
      "class",
      "prose"
    ],
    "properties": {
      "name": {
        "description": "The name of the part, which must be 'practice'.",
        "type": "string",
        "const": "practice"
      },
      "class": {
        "description": "The assigned practice category.",
        "type": "string",
        "enum": [
          "GOV",
          "ISGA",
          "DOCS",
          "RISK",
          "REAL",
          "PERF",
          "LAW",
          "ARCH",
          "SENS",
          "BER",
          "DET",
          "SYS",
          "APP"
        ]
      },
      "prose": {
        "description": "Justification for why the control belongs to the chosen practice.",
        "type": "string",
        "minLength": 50
      }
    },
    "additionalProperties": false
  }