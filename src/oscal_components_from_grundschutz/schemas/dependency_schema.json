{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Baustein Dependency List",
    "type": "object",
    "properties": {
      "dependencies": {
        "type": "array",
        "description": "A list of Baustein IDs that are identified as direct dependencies.",
        "items": {
          "type": "string",
          "description": "A Baustein ID, e.g., 'SYS.1.1' or 'NET.1'."
        }
      }
    },
    "required": ["dependencies"]
  }